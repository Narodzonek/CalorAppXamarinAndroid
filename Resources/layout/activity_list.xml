<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:isScrollContainer="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ListHeaderLayout">
        <TextView
            android:text="Witaj!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/helloLabel"
            android:textStyle="bold|italic"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:textAlignment="center" />
        <TextView
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/helloUserName"
            android:textSize="34dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textAlignment="center" />
        <TextView
            android:text="Jesli zjedzone kalorie nie zostana wykorzystane (spalone), sa magazynowane w organizmie. Dlatego pilnuj zjedzonych kalorii i dbaj o odpowiednia ilosc aktywnego ruchu. "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="16dp"
            android:layout_marginBottom="20dp"
            android:textStyle="normal|italic"
            android:textColor="@android:color/black"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/ListContentLayout">
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listContentView" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:text="Suma kalorii: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextView12"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textAlignment="center" />
            <TextView
                android:text="000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sumofcal"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textAlignment="center" />
        </LinearLayout>
        <EditText
            android:hint="Wpisz nazwe jedzenia."
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/foodName" />
        <EditText
            android:hint="Wpisz liczbe kalorii."
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kcalNumber" />
        <EditText
            android:hint="Wpisz notatke, np date lub czas."
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateValue" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="?android:attr/colorAccent"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Dodaj"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="?android:attr/colorAccent"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Edytuj"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorAccent"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Usun"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="?android:attr/colorAccent"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="Wyloguj sie" />
</LinearLayout>
